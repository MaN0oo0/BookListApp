@page
@model BookList.Pages.BooksList.DeleteModel
@{      ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Are You Shure To Delete @Model.book.Author Book </h2>
<div class="border container  " style="padding:30px;">
    <form method="post">
        <div class="text-danger font-weight-bolder" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="book.Id" />
        <div class="form-group row">
            <div class="col-4 m-2">
                <label asp-for="book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.Name" class="form-control" readonly />
                <span asp-validation-for="book.Name" class="text-danger font-weight-bolder"></span>
            </div>
            <div class="col-4 m-2">
                <label asp-for="book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.Author" class="form-control" readonly/>
                <span asp-validation-for="book.Author" class="text-danger font-weight-bolder"></span>
            </div>
            <div class="col-4 m-2">
                <label asp-for="book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.ISBN" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Delete" class="btn btn-primary form-control" />

            </div>
            <div class="col-3 ">
                <a asp-page="index" class="btn btn-success form-control">return</a>
            </div>

        </div>
    </form>
</div>