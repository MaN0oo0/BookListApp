@page
@model BookList.Pages.BooksList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Book</h2>
<div class="border container  " style="padding:30px;" >
    <form method="post">
        <div class="text-danger font-weight-bolder" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4 m-2">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger font-weight-bolder"></span>
            </div>
            <div class="col-4 m-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger font-weight-bolder"></span>
            </div>
            <div class="col-4 m-2">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />

            </div>
            <div class="col-3 ">
                <a asp-page="index" class="btn btn-success form-control">return</a>
            </div>

        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}